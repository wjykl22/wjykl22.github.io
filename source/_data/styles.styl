
// 设置博客总体颜色基调
html,
body,
span,
p,
h1,
h2,
h3,
h4,
h5,
h6 {
  color: #000000;
}
//博客主标题
.site-title {
  font-size 1.5em
  color: #ffffff;
}
//博客副标题
.site-subtitle {
  font-size 1.0em
}

.menu .menu-item .badge {
  display: inline-block;
  padding: 0.1em 0.4em;
  margin-left: 5px;
  font-weight: 700;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  background-color: #a9a6a654;
}

// 菜单超链接字体大小
.menu .menu-item a {
  font-size: 16px;
}
// 菜单各项边距
.menu .menu-item {
  margin: 5px 15px;
}
// 菜单超链接样式
.menu .menu-item a:hover {
  border-bottom-color: rgba(190, 102, 171, 0);
}
.menu a {
  background-color: rgba(0, 0, 0, 0);
  color: #2e405b;
}


// 设置卡片是否透明
.content-wrap {
  opacity: 0.95;
}
.sidebar {
  opacity: 0.80;
}
.header-inner {
  background: rgba(255,255,255,0.90);
}
.popup {
  opacity: 0.95;
}

// 设置背景图片
body {
  background-image:url(../img/y3Jw-CI93P.jpg);
  height:100%;
  width:100%;
  background-repeat:repeat-x;
  background-attachment:fixed;
  background-size:cover;
}

.links-of-blogroll-list a {
  font-size 14px
  color #5038b8
  font-weight bold
}
.links-of-blogroll-title {
  font-size 16px
}
a {
  border-bottom none
}

